#include <Arduino.h>

const int SW_pin = 5;  
#define X_pin 36       
#define Y_pin 39

void setup(void) {
  pinMode(25, OUTPUT);
  pinMode(33, OUTPUT);
  pinMode(27, OUTPUT);
  pinMode(32, OUTPUT);
  pinMode(26, OUTPUT);
  pinMode(SW_pin, INPUT);
  digitalWrite(SW_pin, HIGH);
  Serial.begin(9600);
  pinMode(X_pin, INPUT);
  pinMode(Y_pin, INPUT);
}

void loop(void) {
  int X_value = analogRead(X_pin);
  int Y_value = analogRead(Y_pin);
  int SW_value = digitalRead(SW_pin);

  Serial.print("X 軸: ");
  Serial.print(X_value);
  Serial.print("Y 軸: ");
  Serial.print(Y_value);
  Serial.print("按鈕: ");
  Serial.println(SW_value);
  

  if (Y_value < 1000) {
    digitalWrite(27, HIGH);
  }  
  else {
    digitalWrite(27, LOW);
  }
  if (X_value < 1000) {
    digitalWrite(25, HIGH);
  }
  else {
    digitalWrite(25, LOW);
  }
  if (X_value > 3600) {
    digitalWrite(33, HIGH);
  }
  else {
    digitalWrite(33, LOW);
  }
  if (Y_value > 3600) {
    digitalWrite(32, HIGH);
  }
  else {
    digitalWrite(32, LOW);
  }


  if (digitalRead(SW_pin) == HIGH) {
    digitalWrite(26, HIGH);
  }
  else {
    digitalWrite(26, LOW);
  }

}
