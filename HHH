#include <Arduino.h>
#include <U8g2lib.h>

#ifdef U8X8_HAVE_HW_SPI
#include <SPI.h>
#endif
#ifdef U8X8_HAVE_HW_I2C
#include <Wire.h>
#endif

U8G2_SH1106_128X64_NONAME_F_HW_I2C u8g2(U8G2_R0, /* reset=*/ U8X8_PIN_NONE);

unsigned long pms;
int m = 0,s = 0;


void setup(void) {
  u8g2.begin();
  pms += millis();
}

void loop(void) {
  func1();
}

void func1(void) {
    if (millis() - pms > 1000) {
    pms += 1000;
    u8g2.firstPage();
    do {
      u8g2.setFont(u8g2_font_8x13_tf);
      u8g2.setCursor(5, 10);
      u8g2.print("Func 1.");
      u8g2.setCursor(5, 63);
      u8g2.print("11101136");
      u8g2.setCursor(15, 45);
      u8g2.setFont(u8g2_font_spleen16x32_me);
      u8g2.printf("%02d:%02d", m,s);

    } while (u8g2.nextPage());

    s++;
    if (s>59) {
      m++;
      s=0;
    }
  } 
}
