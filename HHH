#include <U8glib.h>

U8GLIB_SH1106_128X64 u8g(U8G_I2C_OPT_NONE);  // I2C / TWI 

int switchPin = 2; // switch is connected to pin 2
int joystickPin = 34; // joystick is connected to pin 34
int state = 0; // 0 for timer, 1 for voltmeter

void setup() {
  pinMode(switchPin, INPUT);
}

void loop() {
  state = digitalRead(switchPin);
  if (state == 0) {
    displayTimer();
  } else {
    displayVoltmeter();
  }
  delay(60 * 1000); // delay for 1 minute
}

void displayTimer() {
  u8g.firstPage();  
  do {
    drawTimer();
  } while( u8g.nextPage() );
}

void drawTimer() {
  unsigned long time = millis();
  int seconds = time / 1000;
  int minutes = seconds / 60;
  seconds = seconds % 60;
  u8g.setFont(u8g_font_unifont);
  u8g.setPrintPos(0, 20);
  u8g.print("Timer: ");
  if (minutes < 10) u8g.print('0');
  u8g.print(minutes);
  u8g.print(":");
  if (seconds < 10) u8g.print('0');
  u8g.println(seconds);
  u8g.setPrintPos(0, 40);
  u8g.print("Student ID: ");
  u8g.println("12345678"); // replace with your student ID
}

void displayVoltmeter() {
  u8g.firstPage();  
  do {
    drawVoltmeter();
  } while( u8g.nextPage() );
}

void drawVoltmeter() {
  int sensorValue = analogRead(joystickPin);
  float voltage = sensorValue * (3.3 / 4095.0);
  u8g.setFont(u8g_font_unifont);
  u8g.setPrintPos(0, 20);
  u8g.print("Voltage: ");
  u8g.print(voltage);
  u8g.println(" V");
}
